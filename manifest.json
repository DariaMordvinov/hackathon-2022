{
    "manifest_version": 3,
    "name": "IdiomFinder",
    "version": "0.4",
    "description": "Finds idioms on a page and displays their meaning for the user",

    "content_scripts": [{
        "js": ["main.js"],
        "matches": ["http://*/*", "https://*/*"]
    }],
    "permissions":  ["storage"],
    "action": {
        "default_popup": "popup.html"
    }
  }